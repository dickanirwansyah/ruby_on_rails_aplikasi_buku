<div class="container">
  <div class="container-fluid">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="page-header">
        <h3 class="alert alert-info"><%=@title%></h3>
      </div>
        <div class="form-group">
          <%= form_for(@buku) do |data|%>
            <div class="col-lg-5 col-lg-offset-2">
              <div class="form-group">
                <%=data.label :idbuku%>
                <%=data.text_field :idbuku, class:'form-control', placeholder:'idbuku', readonly:'readonly'%>
              </div>
              <div class="form-group">
                <%=data.label :judul_buku%>
                <%=data.text_field :judulBuku, class:'form-control', placeholder:'judul_buku'%>
              </div>
              <div class="form-group">
                <%=data.label :pengarang_buku%>
                <%=data.text_field :namaPengarang, class:'form-control', placeholder:'nama_pengarang'%>
              </div>
              <div class="form-group">
                <%=data.label :penerbit%>
                <%=data.text_field :penerbit, class:'form-control', placeholder:'penerbit'%>
              </div>
              <div class="form-group">
                <%=data.label :tahun_terbit%>
                <%=data.text_field :tahunTerbit, class:'form-control', placeholder:'tahun_terbit'%>
              </div>
              <div class="col-lg-offset-1">
                <%=data.submit({:class => 'btn btn-primary'})%>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
