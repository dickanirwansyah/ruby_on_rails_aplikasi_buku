<div class="container">
  <div class="container-fluid">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="page-header">
        <h3><%=@title%></h3>
      </div>
        <div class="col-lg-5 col-lg-offset-2">
        <%=form_for :buku, url: bukus_path do |buku|%>
          <div class="form-group">
            <%=buku.label :ID_buku%>
            <%=buku.text_field :idbuku, class:'form-control', type: 'text', placeholder: 'ID Buku'%>
          </div>
          <div class="form-group">
            <%=buku.label :judul_buku%>
            <%=buku.text_field :judulBuku, class:'form-control', type: 'text', placeholder: 'Judul Buku'%>
          </div>
          <div class="form-group">
            <%=buku.label :nama_pengarang%>
            <%=buku.text_field :namaPengarang, class:'form-control', type: 'text', placeholder: 'Pengarang'%>
          </div>
          <div class="form-group">
            <%=buku.label :penerbit%>
            <%=buku.text_field :penerbit, class:'form-control', type: 'text', placeholder: 'Penerbit'%>
          </div>
          <div class="form-group">
            <%=buku.label :tahun_terbit%>
            <%=buku.text_field :tahunTerbit, class:'form-control', type: 'text', placeholder: 'Terbit'%>
          </div>
          <div class="col-lg-offset-3">
          <%=buku.submit :save, class:'btn btn-primary'%>
          <a href="/" class="btn btn-danger">
            cancel
          </a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
